<article class="summary-item" aria-labelledby="funding-values">
  <% if project.funding_values_started? %>
    <h2 class="govuk-heading-m" id="funding-values">Funding values</h2>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <ul class="summary-list underlined-items">
          <% project.funding.each do |f| %>
            <li>
              <span class="half-width"><%= f[:name] %></span>
              <span class="pull-right">Â£<%= number_with_delimiter f[:value] %></span>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="govuk-grid-column-one-third">
        <% if project.draft? %>
          <% if can_edit_project_sections?(project) -%>
            <div class="change-link">
              <%= link_to pafs_core.project_step_path(id: project.to_param, step: :funding_values) do -%>
                Change<span class="govuk-visually-hidden"> the funding values</span>
              <% end -%>
            </div>
          <% end -%>
        <% end -%>
      </div>
    </div>
  <% else %>
    <div class="add-row">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
          <h2 class="govuk-heading-m" id="funding-values">Funding values</h2>
        </div>
        <div class="govuk-grid-column-one-quarter">
          <% unless project.archived? %>
            <% if can_edit_project_sections?(project) -%>
              <div class="add-link">
                <%= link_to pafs_core.project_step_path(id: project.to_param, step: :funding_values) do -%>
                  Add<span class="govuk-visually-hidden"> the funding values</span>
                <% end -%>
              </div>
            <% end -%>
          <% end -%>
        </div>
      </div>
    </div>
  <% end %>
</article>
