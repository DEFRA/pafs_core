<article class="summary-item" aria-labelledby="project-type">
  <div class="summary-item-content">
    <h2 class="govuk-heading-m" id="project-type">Project type</h2>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <p><%= project_type_label(project.project_type) %></p>
      </div>
      <div class="govuk-grid-column-one-third">
        <% if project.draft? %>
          <% if can_edit_project_sections?(project) -%>
            <div class="change-link">
              <%= link_to pafs_core.project_step_path(id: project.to_param, step: :project_type) do -%>
                Change<span class="govuk-visually-hidden"> the project type</span>
              <% end -%>
            </div>
          <% end -%>
        <% end -%>
      </div>
    </div>
  </div>
</article>
