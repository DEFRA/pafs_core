<% content_for :title, t(".heading") unless content_for :title %>

<div class="step-container">
  <div>
    <div>
      <h2 class="govuk-heading-m" role="heading" id="flood_protection_outcomes_detail"><%= project.summary_label(:flood_protection_outcomes2040_detail_heading) %></h2>
      <p class="govuk-body-s"><%= project.summary_label(:flood_protection_outcomes_detail_lede) %></p>
      <div class="step-form">
        <div class="scroll-horz">
          <table class="flood_protection_outcomes_detail_table" aria-labelledby="<%= project.summary_label(:flood_protection_outcomes_detail_heading) %>">
            <thead>
            <tr>
              <th class="financial-year-column" scope="col"><%= project.summary_label(:financial_year_label) %></th>
              <th class="risk-summary-heading" scope="col"><%= project.summary_label(:households_at_reduced_risk_label) %></th>
              <th class="risk-summary-heading" scope="col"><%= project.summary_label(:households_moved_from_very_significant_and_significant_to_moderate_or_low_label) %></th>
              <th class="risk-summary-heading" scope="col"><%= project.summary_label(:households_protected_from_loss_in_20_percent_most_deprived_label) %></th>
              <th class="risk-summary-heading" scope="col"><%= project.summary_label(:non_residential_properties_at_reduced_risk_flood_protection_label) %></th>
            </tr>
            <tr>
              <td></td>
              <th class="risk-summary-subheading" scope="col">A</th>
              <th class="risk-summary-subheading" scope="col">B</th>
              <th class="risk-summary-subheading" scope="col">C</th>
              <th class="risk-summary-subheading" scope="col">D</th>
            </tr>
            </thead>
            <tbody>
            <% project.current_flood_protection2040_outcomes.each do |fo| %>
                <tr>
                  <td id=<%= "financial_year_#{fo.financial_year}" %> class="financial_year">
                    <%= formatted_financial_year(fo.financial_year) %>
                  </td>
                  <td id=<%= "households_at_reduced_risk_#{fo.financial_year}" %> class="<%= funding_table_cell(fo.financial_year, fo.households_at_reduced_risk) %>">
                    <%= number_with_delimiter fo.households_at_reduced_risk %>
                  </td>
                  <td id=<%= "moved_from_very_significant_and_significant_to_moderate_or_low_#{fo.financial_year}" %> class="<%= funding_table_cell(fo.financial_year, fo.moved_from_very_significant_and_significant_to_moderate_or_low) %> significant-to-low-risk">
                    <%= number_with_delimiter fo.moved_from_very_significant_and_significant_to_moderate_or_low %>
                  </td>
                  <td id=<%= "households_protected_from_loss_in_20_percent_most_deprived_#{fo.financial_year}" %> class="<%= funding_table_cell(fo.financial_year, fo.households_protected_from_loss_in_20_percent_most_deprived) %>">
                    <%= number_with_delimiter fo.households_protected_from_loss_in_20_percent_most_deprived %>
                  </td>
                  <td id=<%= "non_residential_properties_#{fo.financial_year}" %> class="<%= funding_table_cell(fo.financial_year, fo.non_residential_properties) %>">
                    <%= number_with_delimiter fo.non_residential_properties %>
                  </td>
                </tr>
            <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td><%= project.summary_label(:total_label) %></td>
                <td id="households_at_reduced_risk" class="numeric households-at-reduced-risk-total"><%= number_with_delimiter project.total_households_flood_protected_2040_by_category(:households_at_reduced_risk)%></td>
                <td id="moved_from_very_significant_and_significant_to_moderate_or_low" class="numeric moved-from-very-significant-and-significant-to-moderate-or-low-total"><%= number_with_delimiter project.total_households_flood_protected_2040_by_category(:moved_from_very_significant_and_significant_to_moderate_or_low)%></td>
                <td id="households_protected_from_loss_in_20_percent_most_deprived" class="numeric households-protected-from-loss-in-20-percent-most-deprived-total"><%= number_with_delimiter project.total_households_flood_protected_2040_by_category(:households_protected_from_loss_in_20_percent_most_deprived)%></td>
                <td id="non_residential_properties" class="numeric non-residential-properties-total"><%= number_with_delimiter project.total_households_flood_protected_2040_by_category(:non_residential_properties)%></td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
