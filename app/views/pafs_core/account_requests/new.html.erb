<h1 class="heading-large"><%= t(".heading") %></h1>
<p class="lede"><%= t(".lede") %></p>
<%= form_for @account_request do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: "form-label-bold" %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "form-label-bold" %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "form-label-bold" %>
    <span class="form-hint"><%= t(".email_hint_html") %></span>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :telephone_number, class: "form-label-bold" %>
    <span class="form-hint"><%= t(".telephone_number_hint_html") %></span>
    <%= f.text_field :telephone_number, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :organisation, class: "form-label-bold" %>
    <span class="form-hint"><%= t(".organisation_hint_html") %></span>
    <%= f.text_field :organisation, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :job_title, class: "form-label-bold" %>
    <span class="form-hint"><%= t(".job_title_hint_html") %></span>
    <%= f.text_field :job_title, class: "form-control" %>
  </div>
  <details>
    <summary><span class="summary"><%= t('.terms_and_conditions_label') %></span></summary>
    <div class="panel-indent">
      <%= render 'shared/terms_and_conditions' %>
    </div>
  </details>
  <div class="form-group">
    <%= f.label :terms_accepted, class: "block-label" do -%>
      <%= f.check_box :terms_accepted %> <%= t(".accept_terms_and_conditions_label") %>
    <% end -%>
  </div>
  <%= f.submit t(".submit_label"), class: 'button' %>
<% end %>

