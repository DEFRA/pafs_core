<div class="step-container">
  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="step-form">
        <%= pafs_form_for @project, url: funding_projects_path, method: :post do |f| %>
          <%= f.error_header %>
          <h1 class="heading-large"><%= t(".heading", date: six_year_limit_date) %></h1>
          <%= f.hidden_field :id %>
          <fieldset class="inline">
            <legend class="visuallyhidden"><%= t(".heading", date: six_year_limit_date) %></legend>
            <%= f.radio_button_group(:fcerm_gia,
                                     [ { value: "true", options: { label: t("yes_option") } },
                                       { value: "false", options: { label: t("no_option") } }]) %>
          </fieldset>
          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
