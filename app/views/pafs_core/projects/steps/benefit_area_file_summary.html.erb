<% content_for :title, t(".heading") %>

<div class="step-container">
  <div class="govuk-grid-row govuk-body">
    <div class="govuk-grid-column-two-thirds">
      <% scope = "pafs_core.projects.steps.map" %>
      <%= pafs_form_for @project,
        url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
        <%= render partial: "pafs_core/error_summary", locals: { f: f } %>
        <div class="step-form">
          <h1 class="govuk-heading-l" id="file-context"><%= t('.heading') %></h1>
          <div class="form-group govuk-body-s">
            <table class="shapefiles-table">
              <caption class="govuk-visually-hidden"><%= t(".heading") %></caption>
              <thead>
                <tr>
                  <th><%= t(".filename_title") %></th>
                  <th><%= t(".uploaded_title") %></th>
                  <td></td>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <%= link_to t(".download_file_html",
                                  file: @project.benefit_area_file_name),
                                  pafs_core.benefit_area_downloads_path(@project.to_param),
                                  aria: { describedby: "file-context" } %>
                </td>
                <td><%= l @project.benefit_area_file_updated_at %></td>
                <td>
                  <%= link_to t(".delete_label_html"),
                    pafs_core.delete_benefit_area_downloads_path(@project.to_param),
                    aria: { describedby: "file-context" } %>
              </td>
                </tr>
              </tbody>
            </table>
          </div>
          <p>
          <%= f.govuk_submit t("continue_label"), class: 'button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
