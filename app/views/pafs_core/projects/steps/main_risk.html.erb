<% content_for :title, t(".heading") %>

<div class="step-container">
  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="step-form">
        <%= pafs_form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
          <%= render partial: "pafs_core/error_summary", locals: { f: f } %>
          <h1 class="heading-large"><%= t('.heading') %></h1>
          <fieldset>
            <legend class="visuallyhidden">Select the main risk your proposed project wull protect against</legend>
            <%= f.hidden_field :main_risk %>
            <%= f.radio_button_group(:main_risk,
                                     @project.selected_risks.map do |r|
                                        { value: r.to_s,
                                          options: {
                                            label: t("#{r}_label", scope: "pafs_core.projects.steps.risks")
                                          }
                                        }
                                      end) %>
          </fieldset>
          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
