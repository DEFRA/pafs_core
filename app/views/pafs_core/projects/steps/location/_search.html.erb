<div class="grid-row" >
  <%= form_tag('', method: 'get') do %>
    <div class="column-three-thirds">
      <div class="form-group">
        <h1 class="heading-large"><%= t('.heading') %></h1>
        <p><%= t('.description') %></p>
        <ul class="list-bullet">
          <li><%= t(".place_name") %></li>
          <li><%= t(".address") %></li>
          <li><%= t(".post_code") %></li>
          <li><%= t(".grid_reference") %></li>
          <li><%= t(".co_ordinate") %></li>
          <li><%= t(".lat_long") %></li>
        </ul>
        <%= text_field_tag :q, params[:q], label: nil , class: "form-control"%>
      </div>
      <div class="form-group">
        <%= submit_tag "search", class: "button" %>
      </div>
    </div>
  <% end %>
</div>
