<h1 class="heading-large"><%= t('.heading') %></h1>
<p><%= location_search_results_for(results, params[:q], t(".result"), t(".description")) %></p>
<%= pafs_form_for '', method: :get do |f| %>
  <fieldset>
    <legend class="visually-hidden"><%= t('.heading') %></legend>
    <div class="form-group">
      <% results.each do |result| %>
          <%= f.radio_button :q, result[:address].html_safe, label: result[:address].html_safe %>
      <% end %>
    </div>
  </fieldset>
  <div class="form-group">
    <%= link_to t(".location_not_listed"), project_step_path(id: @project, step: @project.step, params: { search: "true"}) %>
  </div>
  <div class="form-group">
    <%= f.submit t("confirm_and_continue_label"), class: "button" %>
  </div>
<% end %>
