<% scope = "pafs_core.projects.steps.funding_calculator" %>
<%= pafs_form_for @project,
  url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>

  <%= render partial: "pafs_core/error_summary", locals: { f: f } %>

  <%= f.govuk_fieldset legend: { text: t('.heading'), size: 'l' } do %>
    <div class="form-group govuk-body-s">
      <table class="funding-calculator-summary">
        <caption class="govuk-visually-hidden"><%= t(".heading") %></caption>
        <thead>
          <tr>
            <th><%= t("filename_title", scope: scope) %></th>
            <th><%= t("uploaded_title", scope: scope) %></th>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to t("download_file_html",
                            file: project.funding_calculator_file_name,
                            scope: scope),
                            funding_calculator_downloads_path(project.to_param),
                            aria: { describedby: "file-context" } %>
            </td>
            <td><%= l project.funding_calculator_updated_at %></td>
            <td>
                <%= link_to t("delete_label_html", scope: scope),
                  delete_funding_calculator_downloads_path(project.to_param),
                  aria: { describedby: "file-context" } %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <%= f.govuk_submit t("continue_label"), class: 'button' %>
  <% end %>
<% end %>
