<% content_for :title, t(".heading") %>

<div class="step-container">
  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="step-form">
        <%= pafs_form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
          <%= render partial: "pafs_core/error_summary", locals: { f: f } %>
          <%= f.hidden_field :id %>
          <h1 class="heading-large"><%= t('.heading') %></h1>
          <%= form_group(@project.step, :flood_protection_after) do %>
            <%= f.error_message(:flood_protection_after) %>
            <fieldset>
              <legend class="visuallyhidden"><%= t(".heading") %></legend>
              <% @project.flood_risk_options.each_with_index do |option, index| %>
                <%= f.radio_button :flood_protection_after, index,
                  label: compound_standard_of_protection_label(option) %>
              <% end %>
            </fieldset>
          <% end %>
          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
