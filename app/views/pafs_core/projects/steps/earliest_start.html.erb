<div class="step-container">
  <div class="grid-row">
    <div class="column-one-third">
      <%= render partial: 'shared/navigator', project: @project %>
    </div>
    <div class="column-two-thirds">
      <h1 class="heading-large"><%= t('.heading') %></h1>
      <div class="step-form">
        <%= form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
          <%= f.hidden_field :could_start_early %>
          <div class="form-group">
            <fieldset class="inline">
              <legend class="visuallyhidden">Could your proposed project start earlier if FCERM funding was available earlier?</legend>
              <%= f.label :could_start_early, class: "block-label", value: "true" do %>
                <%= f.radio_button :could_start_early, "true" %>
                <%= t("yes_option") %>
              <% end %>
              <%= f.label :could_start_early, class: "block-label", value: "false" do %>
                <%= f.radio_button :could_start_early, "false" %>
                <%= t("no_option") %>
              <% end %>
            </fieldset>
          </div>
          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
