<% content_for :title, t(".heading") %>

<div class="step-container">
  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="step-form">
        <%= pafs_form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
          <%= render partial: "pafs_core/error_summary", locals: { f: f } %>
          <h1 class="heading-large"><%= t('.heading') %></h1>
          <%= f.hidden_field :could_start_early %>
          <fieldset class="inline">
            <legend class="visuallyhidden"><%= t(".heading") %></legend>
            <%= f.radio_button_group(:could_start_early,
                                     [ { value: "true", options: { label: t("yes_option") } },
                                       { value: "false", options: { label: t("no_option") } }]) %>
          </fieldset>
          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
