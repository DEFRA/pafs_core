<div class="step-container">
  <div class="grid-row">
    <div class="column-one-third">
      <%= render partial: 'shared/navigator', project: @project %>
    </div>
    <div class="column-two-thirds">
      <div class="step-form">
        <%= pafs_form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
          <%= f.error_header %>
          <h1 class="heading-large"><%= t('.heading') %></h1>
          <p><%= t('surface_water_description') %></p>
          <%= f.form_group(:improve_surface_or_groundwater_amount) do %>
            <%= f.error_message(:improve_surface_or_groundwater_amount) %>
            <%= f.number_field_without_label(:improve_surface_or_groundwater_amount,
                  class: "form-control form-medium", min: 0.01, step: 0.01) %>
            <span>km</span>
          <% end %>
          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
