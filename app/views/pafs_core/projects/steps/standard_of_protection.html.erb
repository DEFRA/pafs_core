<div class="step-container">
  <div class="grid-row">
    <div class="column-one-third">
      <%= render partial: 'shared/navigator', project: @project %>
    </div>
    <div class="column-two-thirds">
      <div class="step-form">
        <%= pafs_form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
          <%= f.error_header %>
          <h1 class="heading-large"><%= t('.heading') %></h1>
          <p class="lede"><%= t('.lede') %></p>
          <p><%= t(".aep_text") %></p>

          <%= f.hint_text(t(".example_text")) %>

          <%= f.percent_field(:flood_protection_before, hint: t(".flood_before_example_text")) %>
          <%= f.percent_field(:flood_protection_after, hint: t(".flood_after_example_text")) %>

          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
