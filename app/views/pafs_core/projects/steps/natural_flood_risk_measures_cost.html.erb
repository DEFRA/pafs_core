<% content_for :title, t(".heading") %>

<div class="step-container">
  <div class="grid-row">
    <div class="column-two-thirds">
      <%= pafs_form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
        <%= render partial: "pafs_core/error_summary", locals: { f: f } %>
        <h1 class="heading-large"><%= t('.heading') %></h1>
        <div class="step-form">
          <fieldset>
            <legend class="visuallyhidden"><%= t('.heading') %></legend>
            <%= form_group(@project.step, :base) do %>
              <%= f.error_message(:base) %>
              <%= f.label(:natural_flood_risk_measures_cost, t('.heading'), class: "visuallyhidden") %>
              <div class="currency-field">
                <%= f.number_field_without_label(:natural_flood_risk_measures_cost,
                    class: "form-control form-large",
                    step: 0.01
                    ) %>
              </div>
            <% end %>
          </fieldset>
          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
