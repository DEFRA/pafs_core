<% scope = "pafs_core.projects.steps.map" %>
<%= pafs_form_for @project,
  url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
  <%= render partial: "pafs_core/error_summary", locals: { f: f } %>
  <div class="step-form">
    <h1 class="govuk-heading-l" id="file-context"><%= t('.heading') %></h1>
    <div class="form-group">
      <table>
        <thead>
          <tr>
            <th><%= t("filename_title", scope: scope) %></th>
            <th><%= t("uploaded_title", scope: scope) %></th>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to t("download_file_html",
                            file: project.benefit_area_file_name,
                            scope: scope),
                            download_benefit_area_file_project_path(project.to_param),
                            aria: { describedby: "file-context" } %>
            </td>
            <td><%= l project.benefit_area_file_updated_at %></td>
            <td>
                <%= link_to t("delete_label_html", scope: scope),
                  delete_benefit_area_project_path(project.to_param),
                  aria: { describedby: "file-context" } %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <%= f.govuk_submit t("continue_label"), class: 'button' %>
  </div>
<% end %>
