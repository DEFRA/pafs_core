<div class="step-container">
  <div class="grid-row">
    <div class="column-one-third">
      <%= render partial: 'shared/navigator', project: @project %>
    </div>
    <div class="column-two-thirds">
      <h1 class="heading-large"><%= t('.heading') %></h1>
      <div class="step-form">
        <%= form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
          <div class="form-group">
            <%= f.label :name, t(".project_name_label"), class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <details>
            <summary><span class="summary"><%= t('.help_label') %></span></summary>
            <div class="panel-indent">
              <%= t('.help_content_html') %>
            </div>
          </details>
          <%= f.submit t("save_and_continue_label"), class: 'button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
