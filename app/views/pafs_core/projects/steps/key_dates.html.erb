<div class="step-container">
  <div class="grid-row">
    <div class="column-one-third">
      <%= render partial: 'shared/navigator', project: @project %>
    </div>
    <div class="column-two-thirds">
      <%= pafs_form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
        <%= f.error_header %>
        <h1 class="heading-large"><%= t('.heading') %></h1>
        <div class="step-form vertical-squash">
          <div class="form-group">
            <h3 class="heading-medium"><%= t('.outline_business_case') %></h3>
            <fieldset>
              <legend class="visuallyhidden">Gateway 1 date</legend>
              <%= f.month_and_year(:start_outline_business_case,
                                   hint: t(".example_text")) %>
            </fieldset>
          </div>
          <div class="form-group">
            <h3 class="heading-medium"><%= t('.gateway_2') %></h3>
            <p class="this-is-not-the-gateway-you-are-looking-for"><%= t('.there_is_no_gateway_2') %></p>
          </div>
          <div class="form-group">
            <h3 class="heading-medium"><%= t('.award_the_contract') %></h3>
            <fieldset>
              <legend class="visuallyhidden">Gateway 3 date</legend>
              <%= f.month_and_year(:award_contract, hint: t(".example_text")) %>
            </fieldset>
          </div>
          <div class="form-group">
            <h3 class="heading-medium"><%= t('.start_construction') %></h3>
            <fieldset>
              <legend class="visuallyhidden">Construction start date</legend>
              <%= f.month_and_year(:start_construction, hint: t(".example_text")) %>
            </fieldset>
          </div>
          <div class="form-group">
            <h3 class="heading-medium"><%= t('.ready_for_service') %></h3>
            <fieldset>
              <legend class="visuallyhidden">Gateway 4 date</legend>
              <%= f.month_and_year(:ready_for_service, hint: t(".example_text")) %>
            </fieldset>
          </div>
          <%= f.submit t("save_and_continue_label"), class: 'button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
