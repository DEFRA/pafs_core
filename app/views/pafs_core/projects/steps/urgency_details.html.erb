<% content_for :title, t(".heading") %>

<div class="step-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      <%= pafs_form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>

        <%= render partial: "pafs_core/error_summary", locals: { f: f } %>

        <%= f.hidden_field :id %>
        <% heading = I18n.t("#{@project.urgency_reason}_label", scope: "pafs_core.urgency_details") %>
        <h1 class="govuk-heading-l"><%= heading %></h1>
          <legend class="govuk-visually-hidden">Explain why your project is urgent</legend>
          <%= f.label :urgency_details, heading, class: "govuk-visually-hidden" %>
          <%= f.govuk_text_area :urgency_details,
                                cols: 30,
                                rows: 10, hint: { text: t(".example_text") },
                                label: nil %>
        <div class="form-group">
          <%= f.govuk_submit t("save_and_continue_label"), class: 'button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

