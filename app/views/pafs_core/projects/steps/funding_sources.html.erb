<% content_for :title, t(".heading") %>

<div class="step-container">
  <div class="grid-row">
    <div class="column-two-thirds">
      <%= pafs_form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
        <%= form_error_header(f) %>
        <h1 class="heading-large"><%= t('.heading') %></h1>
        <p><%= t(".lede") %></p>
        <div class="step-form">
          <fieldset>
            <legend class="visuallyhidden"><%= t('.heading') %></legend>
            <%= f.form_group :base do %>
              <%= f.error_message(:base) %>
              <% PafsCore::FundingSources::FUNDING_SOURCES.each do |fs| %>
                <%= f.check_box fs, label: @project.funding_source_label(fs) %>
              <% end %>
            <% end %>
          </fieldset>
          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
