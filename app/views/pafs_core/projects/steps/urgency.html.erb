<div class="step-container">
  <div class="grid-row">
    <div class="column-one-third">
      <%= render partial: 'shared/navigator', project: @project %>
    </div>
    <div class="column-two-thirds">
        <%= pafs_form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
          <%= f.error_header %>
          <%= f.hidden_field :id %>
          <h1 class="heading-large"><%= t('.heading') %></h1>
          <div class="step-form">
            <fieldset>
              <legend class="visuallyhidden">Select the reason why your project is urgent</legend>
              <%= f.form_group(:urgency_reason) do %>
                <%= f.error_message(:urgency_reason) %>
                <% PafsCore::URGENCY_REASONS.each do |r| %>
                  <%= f.radio_button :urgency_reason, r.to_s, label: t("#{r.downcase}_label", scope: "pafs_core.urgency_reasons"), after: "<p>or</p>" if r == "not_urgent" %>
                <% end %>
              <% end %>
            </fieldset>
          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        <% end %>
    </div>
  </div>
</div>
</div>

