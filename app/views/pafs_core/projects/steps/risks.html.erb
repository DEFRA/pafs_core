<div class="step-container">
  <div class="grid-row">
    <div class="column-one-third">
      <%= render partial: 'shared/navigator', project: @project %>
    </div>
    <div class="column-two-thirds">
      <h1 class="heading-large"><%= t('.heading') %></h1>
      <p class="lede"><%= t('.lede') %></p>
      <div class="step-form">
        <%= form_for @project, url: save_project_step_path(id: @project.to_param, step: @project.step) do |f| %>
          <fieldset>
            <legend class="visuallyhidden">Select which risks your proposed project wull protect against</legend>
            <div class="form-group">
              <%= f.label :fluvial_flooding, class: "block-label" do %>
                <%= f.check_box :fluvial_flooding %>
                <%= t(".fluvial_flooding_label") %>
              <% end %>
              <%= f.label :tidal_flooding, class: "block-label" do %>
                <%= f.check_box :tidal_flooding %>
                <%= t(".tidal_flooding_label") %>
              <% end %>
              <%= f.label :groundwater_flooding, class: "block-label" do %>
                <%= f.check_box :groundwater_flooding %>
                <%= t(".groundwater_flooding_label") %>
              <% end %>
              <%= f.label :surface_water_flooding, class: "block-label", data: { target: "public-contributors" } do %>
                <%= f.check_box :surface_water_flooding %>
                <%= t(".surface_water_flooding_label") %>
              <% end %>
              <%= f.label :coastal_erosion, class: "block-label", data: { target: "private-contributors" } do %>
                <%= f.check_box :coastal_erosion %>
                <%= t(".coastal_erosion_label") %>
              <% end %>
            </div>
          </fieldset>
          <div class="form-group">
            <%= f.submit t("save_and_continue_label"), class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
