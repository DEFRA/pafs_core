<% content_for :title, t(".heading") %>

<% last_year = @project.financial_year_options.last + 1 %>
<div class="step-container">
  <div class="grid-row">
    <div class="column-two-thirds">
      <%= pafs_form_for @project, url: { action: "save", id: @project.to_param, step: @project.step } do |f| %>
        <%= form_error_header(f) %>
        <h1 class="heading-large"><%= t('.heading') %></h1>
        <p><%= t('.lede') %></p>
        <div class="step-form">
          <%= f.number_field :project_end_financial_year,
            in: Time.now.uk_financial_year..2100,
            class: "form-control form-year",
            hint: t(".example_text"),
            label: t(".financial_year_label"),
            label_class: "form-label" %>

          <%= f.submit t("save_and_continue_label"), class: 'button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
