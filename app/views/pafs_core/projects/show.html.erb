<section id="project-summary" class="font-xsmall">
  <header class="summary-heading">
    <div class="grid-row">
      <div class="column-two-thirds">
        <h1 class="heading-medium"><%= @project.name %></h1>
        <p><%= link_to "Print overview", "#" %> / <%= link_to "Download overview PDF", "#" %></p>
      </div>
      <div class="column-one-third">
        <dl>
          <dt>Project number</dt>
          <dd><%= @project.reference_number %></dd>
          <dt>Last submitted</dt>
          <dd><%= @project.updated_at %></dd>
        </dl>
      </div>
    </div>
  </header>
  <% %i[ project_name project_type financial_year key_dates funding_sources funding_values earliest_start risks].each do |item| %>
    <%= render partial: "summary/#{item}", locals: { project: @project } %>
  <% end %>
</section>
