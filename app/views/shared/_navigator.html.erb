          <%= link_to "Environmental issues", "#" %>
        </li>
      </ul>
    </section>
    <section>
      <h1 class="heading-small">Urgency</h1>
      <ul>
        <%= nav_step_item(@project, :urgency) %>
      </ul>
    </section>
    <section>
      <h1 class="heading-small">Partnership funding</h1>
      <ul>
        <%= nav_step_item(@project, :funding_calculator) %>
