<article class="summary-item" aria-labelledby="financial-year">
  <div class="summary-item-content">
    <h2 class="heading-medium" role="heading" id="financial-year">Last financial year the project will spend funds</h2>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <p><%= formatted_financial_month_and_year project.project_end_financial_year %></p>
      </div>
      <div class="govuk-grid-column-one-third">
        <% if project.draft? %>
          <% if can_edit_project_sections?(project) -%>
            <div class="change-link">
              <%= link_to pafs_core.project_step_path(id: project.to_param, step: :financial_year) do -%>
                Change<span class="govuk-visually-hidden"> the last financial year the project will spend funds</span>
              <% end -%>
            </div>
          <% end -%>
        <% end -%>
      </div>
    </div>
  </div>
</article>
